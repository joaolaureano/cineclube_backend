{
  "name": "cine-clube-backend",
  "version": "1.0.0",
  "description": "Backend",
  "author": "Time AGES 2021/1 - Cine Clube",
  "main": "src/index.ts",
  "scripts": {
    "start": "tsoa routes && tsoa swagger && ts-node dist/src/index.js ",
    "dev": "tsoa routes && tsoa swagger && ts-node-dev src/index.ts",
    "build": "tsoa routes && tsoa swagger && tsc",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js --config src/config/database.ts",
    "lint": "prettier --write ./src/**/*.{js,jsx,ts,tsx,json,css,scss,md}",
    "tsoa:gen": "tsoa routes && tsoa swagger",
    "db:seed": "ts-node src/database/seed.ts"
  },
  "repository": {
    "type": "git",
    "url": "http://tools.ages.pucrs.br/cine-clube/backend.git"
  },
  "keywords": [],
  "license": "ISC",
  "dependencies": {
    "@types/body-parser": "^1.19.2",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "firebase-admin": "^9.6.0",
    "mysql2": "^2.2.5",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13",
    "swagger-ui-express": "^4.1.6",
    "ts-node": "^10.9.1",
    "tslib": "^2.4.0",
    "tsoa": "^3.6.1",
    "typeorm": "^0.2.31",
    "typescript": "^4.7.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/node": "^14.18.22",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^4.17.0",
    "@typescript-eslint/parser": "^4.17.0",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "moment": "^2.29.1",
    "prettier": "^2.2.1",
    "ts-node-dev": "2.0.0-0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  }
}
